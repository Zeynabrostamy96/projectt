@model Tuple<List<Note>, int>
@using TapLearn.Layer.Entites.Course
@using TapLearn.Core.Convertors
@{
    Layout = null;
}
@foreach (var item in Model.Item1)
{

    <!-- row -->
    <div class="comment-row">
        <img src="/UserAvator/@item.user.UserAvatar">
        <div class="left-col">
            <h3> @item.user.UserName </h3>
            <span>@item.CreateDate.ToShamsi()</span>
            <p>
                @item.Comment
            </p>
        </div>
    </div>
    <!-- /row -->

}
<div>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
           
            @for (int i=1;i<=Model.Item2;i++)
            {
                <li class="page-item"><a class="page-link" onclick="(pageComment(@i))">@i</a></li>
            }


         
        </ul>
    </nav>
</div>