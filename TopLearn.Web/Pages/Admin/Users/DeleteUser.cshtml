@page
@model TopLearn.Web.Pages.Admin.Users.DeleteUserModel
@{
}
@using  TapLearn.Core.Convertors
<body>

    <div id="wrapper">


        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">لیست کاربران </h1>
            </div>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        لیست کاربران سایت
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                <div class="row ">
                                    <form>
                                        <div class="col-sm-5 col-md-5">
                                            <input placeholder="نام کاربری" name="UserName" class="form-control" type="text" />
                                        </div>
                                        <div class="col-sm-5 col-md-5">
                                            <input placeholder="ایمیل" name="filterEmail" class="form-control" type="email" />
                                        </div>
                                        <div class="col-sm-2 col-md-2">
                                            <button type="submit" class="btn btn-info">جستجو</button>
                                            <a href="/admin/users" class="btn btn-default">برگشت </a>
                                        </div>
                                    </form>

                                </div>
                              

                                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                    <thead>
                                        <tr>
                                            <th>نام کاربری </th>
                                            <th>ایمیل</th>
                                            <th>وضعیت </th>
                                            <th>تاریخ ثبت نام </th>
                                            <th>دستورات</th>
                                        <tr>

                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.UsersViewModel.users)
                                        {
                                            <tr class="gradeA even">
                                                <td class="sorting_1">@item.UserName</td>
                                                <td class=" ">@item.Email</td>

                                                <td class="center ">
                                                    @if (item.IsActive)
                                                    {
                                                        <p class="text-success">فعال </p>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-danger">غیرفعال </p>
                                                    }

                                                </td>
                                                <td class=" ">@item.RegisterDate.ToShamsi()</td>

                                            </tr>

                                        }
                                    </tbody>
                                </table>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                            <ul class="pagination">
                                                @for (int i = 1; i <= Model.UsersViewModel.PageCount; i++)
                                                {
                                                    <li class="paginate_button @((i==Model.UsersViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                        <a href="/Admin/Users?pageId=@i">@i</a>
                                                    </li>
                                                }

                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
</body>