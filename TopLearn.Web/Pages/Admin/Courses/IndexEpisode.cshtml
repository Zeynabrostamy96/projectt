@page
@model TopLearn.Web.Pages.Admin.Courses.IndexEpisodeModel
@{
}
<body>

    <div id="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"> لیست قسمت ها </h1>
            </div>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        لیست دوره های سایت
                    </div>
                     <div class="panel-body">
                          <div class="table-responsive">
                                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                    <div class="col-md-12" style="margin: 10px 0;">
                                        <a asp-page="CreateEpisode" asp-route-id="@ViewData["CourseId"].ToString()" class="btn btn-warning btn-lg">افزودن بخش جدید</a>
                                    </div>
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                        <thead>
                                            <tr>
                                                <th>عنوان بخش  </th>
                                                <th>زمان جلسه </th>
                                                <th>رایگان </th>
                                                <th>دستورات</th>
                                            <tr>

                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.courseEpisod)
                                            {
                                               <tr class="gradeA even">


                                                <td class=" ">@item.EpisodeTitle</td>
                                                <td class=" ">@item.EpisodeTime</td>
                                                 <td class=" ">
                                                  @if (@item.IsFree)
                                                  {
                                                      <span class="text-success">
                                                          <i class="glyphicon glyphicon-ok"></i>
                                                      </span>
                                                  }
                                                  else
                                                  {

                                                      <span class=" text-danger">
                                                          <i class="glyphicon glyphicon-remove"></i>

                                                      </span>
                                                  }

                                                </td>


                                                <td>
                                                    <a asp-page="EditEpisode" asp-route-id="@item.EpisodeId" class="btn btn-warning btn-sm">ویرایش</a>

                                                    @*<a asp-page="ListDeleteUser" asp-route-id="@item.Userid" class="btn btn-danger btn-sm">حذف</a>*@
                                                </td>

                                                </tr>

                                             }
                                        </tbody>
                                    </table>

                                </div>
                            </div>

                        </div>

                   
                </div>
            </div>
        </div>

    </div>
</body>